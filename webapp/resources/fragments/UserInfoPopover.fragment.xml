        showHeader="false"
        contentWidth="300px"
        placement="Bottom">
        <content>
            <VBox width="100%" height="100%">
                <HBox alignContent="Center" justifyContent="Center"
                    class="sapUiSmallMarginTop">
                    <Avatar
                        initials="{twoWay>/userInitials}"
                        displaySize="L"
                        showBorder="true"
                        press="onPress">
                        <customData>
                            <core:CustomData
                                key="testId"
                                value="userInfoPopover-avatar"
                                writeToDom="true" />
                        </customData>
                    </Avatar>
                </HBox>
                <HBox justifyContent="Center" alignContent="Center"
                    class="sapUiTinyMarginTop">
                    <Title text="{twoWay>/userName}" level="H3">
