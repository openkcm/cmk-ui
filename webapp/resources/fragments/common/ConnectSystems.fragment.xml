<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="connectSystemDialog"
        contentHeight="35rem"
        contentWidth="30rem"
        title="{i18n>connectSystem}">
        <subHeader>
            <Toolbar>
                <SearchField liveChange="onSearchConnectSystems" width="100%" />
            </Toolbar>
        </subHeader>
        <content>
            <List
                id="connectSystemsList"
                mode="SingleSelectMaster"
                items="{model>/systemsList}"
                noDataText="{i18n>noSystemsAvailable}">
                <StandardListItem
                    title="{= ${model>properties/externalName} ? ${model>properties/externalName} : ${model>identifier}}"
                    description="{model>region}"
                    info="{model>type}"
                    type="Active" />
            </List>
        </content>
        <beginButton>
            <Button text="{i18n>connect}" type="Emphasized" press="onConnectSystemsConfirmPress" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onConnectSystemsCancelPress" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>