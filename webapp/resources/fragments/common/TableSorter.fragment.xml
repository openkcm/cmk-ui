<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ViewSettingsDialog class="sapUiSizeCompact" confirm="onTableSortApplyPress"
        sortItems="{viewSettingModel>/sortColumns}"
        sortDescending="{viewSettingModel>/sortDesc}">
        <sortItems>
            <ViewSettingsItem text="{viewSettingModel>text}" key="{viewSettingModel>key}"
                selected="{= ${viewSettingModel>key} === ${viewSettingModel>/sortValue}}" />
        </sortItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>