<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:forms="sap.ui.layout.form">
    <forms:Form width="100%" editable="true">
        <forms:layout>
            <forms:ColumnLayout
                columnsM="2"
                columnsL="3"
                columnsXL="3" />
        </forms:layout>
        <forms:toolbar>
            <OverflowToolbar>
                <Title text="{i18n>details}" />
                <ToolbarSpacer />
                <Button icon="sap-icon://edit" text="{i18n>edit}" type="Ghost"
                    visible="{= ${roleBasedAccess>/keyConfig/canManage}}"
                    press="onEditDetailsPress">
                    <customData>
                        <core:CustomData
                            key="testId"
                            value="keyConfigDetail-editButton"
                            writeToDom="true" />
                    </customData>
                </Button>
            </OverflowToolbar>
        </forms:toolbar>
        <forms:formContainers>
            <forms:FormContainer>
                <forms:formElements>
                    <forms:FormElement label="{i18n>name}">
                        <forms:fields>
                            <Text text="{oneWay>/keyConfig/name}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="keyConfigDetail-nameText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>uuid}">
                        <forms:fields>
                            <Text text="{oneWay>/keyConfig/id}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="keyConfigDetail-idText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>keyAdministrators}">
                        <forms:fields>
                            <Text text="{oneWay>/keyConfig/adminGroupID}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="keyConfigDetail-adminGroupText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>tags}">
                        <forms:fields>
                            <MultiInput tokens="{oneWay>/tags}" editable="false"
                                visible="{= !!${oneWay>/tags} &amp;&amp; ${oneWay>/tags}.length > 0 }">
                                <tokens>
                                    <Token key="{oneWay>}" text="{oneWay>}" />
                                </tokens>
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="keyConfigDetail-tagsMultiInput"
                                        writeToDom="true" />
                                </customData>
                            </MultiInput>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>createdBy}">
                        <forms:fields>
                            <Text text="{oneWay>/keyConfig/metadata/creatorName}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="keyConfigDetail-createdByText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>createdOn}">
                        <forms:fields>
                            <Text
                                text="{path:'oneWay>/keyConfig/metadata/createdAt', type:'sap.ui.model.type.DateTime', formatOptions:{ UTC: true, source:{pattern: 'yyyy-MM-dd\'T\'HH:mm:ss.SSSSSSX'}}} UTC">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="keyConfigDetail-createdOnText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                </forms:formElements>
            </forms:FormContainer>
        </forms:formContainers>
    </forms:Form>
</core:FragmentDefinition>