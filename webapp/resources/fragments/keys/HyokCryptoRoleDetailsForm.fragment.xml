<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:forms="sap.ui.layout.form">
    <forms:Form width="100%">
        <forms:layout>
            <forms:ColumnLayout
                columnsM="1"
                columnsL="1"
                columnsXL="1" />
        </forms:layout>
        <forms:toolbar>
            <OverflowToolbar>
                <Title text="{i18n>cryptoRole}: {twoWay>key}" />
            </OverflowToolbar>
        </forms:toolbar>
        <forms:formContainers>
            <forms:FormContainer
                visible="{= !${oneWay>/cryptoInEditMode}}">
                <forms:formElements>
                    <forms:FormElement label="{i18n>trustAnchorARN}">
                        <forms:fields>
                            <Text text="{twoWay>value/trustAnchorArn}" wrapping="true" />
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>roleARN}">
                        <forms:fields>
                            <Text text="{twoWay>value/roleArn}" wrapping="true" />
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>profileARN}">
                        <forms:fields>
                            <Text text="{twoWay>value/profileArn}" wrapping="true" />
                        </forms:fields>
                    </forms:FormElement>

                </forms:formElements>
            </forms:FormContainer>
            <!-- Important: this part will be uncommented once the story to make HYOK EDITABLE is
            implemented -->
            <forms:FormContainer
                visible="{= ${oneWay>/cryptoInEditMode} &amp;&amp; ${twoWay>value/isEditable}}">
                <forms:formElements>
                    <forms:FormElement label="{i18n>trustAnchorARN}">
                        <forms:fields>
                            <Input value="{twoWay>value/trustAnchorArn}" />
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>roleARN}">
                        <forms:fields>
                            <Input value="{twoWay>value/roleArn}" />
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>profileARN}">
                        <forms:fields>
                            <Input value="{twoWay>value/profileArn}" />
                        </forms:fields>
                    </forms:FormElement>

                </forms:formElements>
            </forms:FormContainer>
        </forms:formContainers>
    </forms:Form>


</core:FragmentDefinition>