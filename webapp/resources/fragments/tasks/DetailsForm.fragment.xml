<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:forms="sap.ui.layout.form"
    core:require="{commonFormatter: 'kms/common/Formatters' }"
>
    <forms:Form width="100%" editable="true">
        <forms:layout>
            <forms:ColumnLayout
                columnsM="2"
                columnsL="3"
                columnsXL="3" />
        </forms:layout>
        <forms:toolbar>
            <OverflowToolbar>
                <Title text="{i18n>details}" />
            </OverflowToolbar>
        </forms:toolbar>
        <forms:formContainers>
            <forms:FormContainer>
                <forms:formElements>
                    <forms:FormElement label="{i18n>taskId}">
                        <forms:fields>
                            <Text text="{oneWay>/task/id}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-idText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>status}">
                        <forms:fields>
                            <ObjectStatus
                                icon="{parts: ['oneWay>/task/state'], formatter: 'commonFormatter.setTaskStatus'}"
                                text="{parts: ['oneWay>/task/state'], formatter: '.getText'}"
                                active="true"
                                inverted="true"
                                state="{parts: ['oneWay>/task/state'], formatter: 'commonFormatter.setTaskStatusIndicationState'}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-statusObjectStatus"
                                        writeToDom="true" />
                                </customData>
                            </ObjectStatus>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>createdBy}">
                        <forms:fields>
                            <Text text="{oneWay>/task/initiatorName}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-initiatorText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement
                        label="{
                                parts: [
                                    {path: 'oneWay>/task/artifactType'}
                                ],
                                formatter: 'commonFormatter.appendIDToLabelText'
                            }">
                        <forms:fields>
                            <Text
                                text="{oneWay>/task/artifactID}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-artifactIdText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement
                        label="{
                                parts: [
                                    {path: 'oneWay>/task/artifactType'}
                                ],
                                formatter: 'commonFormatter.appendNameToLabelText'
                            }">
                        <forms:fields>
                            <Text
                                text="{oneWay>/task/artifactName}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-artifactNameText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement
                        label="{
                                parts: [
                                    {path: 'oneWay>/task/parametersResourceType'}
                                ],
                                formatter: '.getText'
                            }">
                        <forms:fields>
                            <Text
                                text="{oneWay>/task/parametersResourceName}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-parameterId"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>description}">
                        <forms:fields>
                            <Text
                                text="{oneWay>/task/taskDescription}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-desceriptionText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                </forms:formElements>
            </forms:FormContainer>
        </forms:formContainers>
    </forms:Form>
</core:FragmentDefinition>