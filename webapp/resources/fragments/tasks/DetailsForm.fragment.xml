<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:forms="sap.ui.layout.form"
    core:require="{commonFormatter: 'kms/common/Formatters' }"
>
    <forms:Form width="100%" editable="true">
        <forms:layout>
            <forms:ColumnLayout
                columnsM="2"
                columnsL="3"
                columnsXL="3" />
        </forms:layout>
        <forms:toolbar>
            <OverflowToolbar>
                <Title text="{i18n>details}" />
            </OverflowToolbar>
        </forms:toolbar>
        <forms:formContainers>
            <forms:FormContainer>
                <forms:formElements>
                    <forms:FormElement label="{i18n>uuid}">
                        <forms:fields>
                            <Text text="{oneWay>/task/id}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-idText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>createdBy}">
                        <forms:fields>
                            <Text text="{oneWay>/task/initiatorName}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-initiatorText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>approvers}">
                        <forms:fields>
                            <Text
                                text="{parts: ['oneWay>/approvers'], formatter: '.parseApproverNamesWithDecisions'}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-approversText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>status}">
                        <forms:fields>
                            <ObjectStatus
                                icon="{parts: ['oneWay>/task/state'], formatter: 'commonFormatter.setTaskStatus'}"
                                text="{parts: ['oneWay>/task/state'], formatter: '.getText'}"
                                active="true"
                                inverted="true"
                                state="{parts: ['oneWay>/task/state'], formatter: 'commonFormatter.setTaskStatusIndicationState'}">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-statusObjectStatus"
                                        writeToDom="true" />
                                </customData>
                            </ObjectStatus>
                        </forms:fields>
                    </forms:FormElement>
                    <forms:FormElement label="{i18n>createdOn}">
                        <forms:fields>
                            <Text
                                text="{path:'oneWay>/task/metadata/createdAt', type:'sap.ui.model.type.DateTime', formatOptions:{UTC: true, source:{pattern: 'yyyy-MM-ddTHH:mm:ssXXX'}}} UTC">
                                <customData>
                                    <core:CustomData
                                        key="testId"
                                        value="taskDetail-createdOnText"
                                        writeToDom="true" />
                                </customData>
                            </Text>
                        </forms:fields>
                    </forms:FormElement>
                </forms:formElements>
            </forms:FormContainer>
        </forms:formContainers>
    </forms:Form>
</core:FragmentDefinition>